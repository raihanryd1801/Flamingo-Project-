<?php
include 'config/db.php';
session_start();

if (!isset($_SESSION['user_id']) || $_SESSION['role'] !== 'noc_voip') {
    header('Location: unauthorized.php');
    exit();
}

$sql = "
    SELECT o.name AS operator_name, pn.phone_number, pn.client_name, pn.prefix
    FROM phone_numbers pn
    LEFT JOIN operators o ON pn.operator_id = o.id
    WHERE pn.is_terminated = 1
    ORDER BY o.name, pn.phone_number
";

$result = $koneksi->query($sql);

$terminations = [];
while ($row = $result->fetch_assoc()) {
    $terminations[$row['operator_name']][] = $row;
}
?>
<?php if (isset($_GET['success']) && $_GET['success'] == 'recovered'): ?>
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i> Nomor berhasil dikembalikan ke status aktif.
    </div>
<?php elseif (isset($_GET['error'])): ?>
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i> Terjadi kesalahan saat mengembalikan nomor.
    </div>
<?php endif; ?>
